@model IEnumerable<Inventory_Management_System.Models.Manager>

@{
    ViewData["Title"] = "Managers List";
}

<h2>Managers List</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Create New Manager</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th> @* Added Manager ID header *@
            <th>Name</th>
            <th>Contact Info</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@manager.Id</td> @* Added Manager ID data *@
                <td>@manager.Name</td>
                <td>@(string.IsNullOrEmpty(manager.ContactInfo) ? "-" : manager.ContactInfo)</td>
                <td>@manager.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(manager.UpdatedAt.HasValue ? manager.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@manager.Id" class="btn btn-sm btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@manager.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        
    </tbody>
   
</table>
<div class="form-group mt-3">

    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary ms-2">Back to Home</a>
</div>
</div>