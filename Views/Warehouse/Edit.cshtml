@model Inventory_Management_System.Models.Warehouse

@{
    ViewData["Title"] = "Edit Warehouse";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-3">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Edit Warehouse
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SaveEdit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label fw-bold required">Warehouse Name</label>
                                <input asp-for="Name" class="form-control" required />
                                <div class="invalid-feedback">Please enter a valid warehouse name.</div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Address" class="form-label fw-bold">Address</label>
                                <select asp-for="Address" class="form-select" style="background-color: #999ce3; color: white;">
                                    <option value="">-- Select a City --</option>
                                    <option value="Cairo, Egypt">Cairo, Egypt</option>
                                    <option value="Alexandria, Egypt">Alexandria, Egypt</option>
                                    <option value="Giza, Egypt">Giza, Egypt</option>
                                    <option value="Shubra El-Kheima, Egypt">Shubra El-Kheima, Egypt</option>
                                    <option value="Port Said, Egypt">Port Said, Egypt</option>
                                    <option value="Suez, Egypt">Suez, Egypt</option>
                                    <option value="Luxor, Egypt">Luxor, Egypt</option>
                                    <option value="Asyut, Egypt">Asyut, Egypt</option>
                                    <option value="Mansoura, Egypt">Mansoura, Egypt</option>
                                    <option value="Tanta, Egypt">Tanta, Egypt</option>
                                    <option value="Aswan, Egypt">Aswan, Egypt</option>
                                    <option value="Ismailia, Egypt">Ismailia, Egypt</option>
                                    <option value="Faiyum, Egypt">Faiyum, Egypt</option>
                                    <option value="Zagazig, Egypt">Zagazig, Egypt</option>
                                    <option value="Damietta, Egypt">Damietta, Egypt</option>
                                    <option value="Beni Suef, Egypt">Beni Suef, Egypt</option>
                                    <!-- Add more if needed -->
                                </select>

                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ManagerId" class="form-label fw-bold">Assigned Manager</label>
                                <select asp-for="ManagerId" class="form-select" asp-items="@(ViewBag.Managers as SelectList)">
                                    <option value="">-- Select a Manager (Optional) --</option>
                                </select>
                                <span asp-validation-for="ManagerId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">Last Updated</label>
                                <input type="text" class="form-control-plaintext" value="@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")" readonly />
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Example of simple client-side validation using Bootstrap's needs-validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}