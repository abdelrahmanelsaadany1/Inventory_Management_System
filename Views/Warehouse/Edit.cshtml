@model Inventory_Management_System.Models.Warehouse

@{
    ViewData["Title"] = "Edit Warehouse";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-warehouse me-2"></i>Edit Warehouse
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="SaveEdit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken() @* ADDED: Anti-forgery token for security *@
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label required">Name</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" />
                                </div>
                            </div>
                        </div>

                        @* ADDED: Manager dropdown within its own row/column for layout consistency *@
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ManagerId" class="form-label">Manager</label>
                                    <select asp-for="ManagerId" class="form-control" asp-items="@(ViewBag.Managers as SelectList)">
                                        <option value="">-- Select Manager --</option>
                                    </select>
                                    <span asp-validation-for="ManagerId" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                @* Empty column for alignment or future use *@
                            </div>
                        </div>


                        <div class="form-actions mt-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>Save
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}