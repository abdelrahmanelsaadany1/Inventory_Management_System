@model Inventory_Management_System.Models.Warehouse

<h2 style="margin-bottom: 20px;">Add Warehouse</h2>

<form asp-action="SaveAdd" method="post" style="max-width: 500px; padding: 20px; border: 1px solid #ccc; border-radius: 10px;">
    @Html.AntiForgeryToken() @* ADDED: Anti-forgery token for security *@
    <div style="margin-bottom: 20px;">
        <label asp-for="Name" style="display: block; font-weight: bold; margin-bottom: 5px;"></label>
        <input asp-for="Name" class="form-control" style="width: 100%; padding: 10px;" />
        <span asp-validation-for="Name" style="color:red; font-size: 14px;"></span>
    </div>

    <div style="margin-bottom: 20px;">
        <label asp-for="Address" style="display: block; font-weight: bold; margin-bottom: 5px;"></label>
        <input asp-for="Address" class="form-control" style="width: 100%; padding: 10px;" />
    </div>

    @* ADDED: Manager dropdown *@
    <div style="margin-bottom: 20px;">
        <label asp-for="ManagerId" style="display: block; font-weight: bold; margin-bottom: 5px;">Manager</label>
        <select asp-for="ManagerId" class="form-control" style="width: 100%; padding: 10px;" asp-items="@(ViewBag.Managers as SelectList)">
            <option value="">-- Select Manager --</option>
        </select>
        <span asp-validation-for="ManagerId" style="color:red; font-size: 14px;"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Warehouse</button>
    <a href="@Url.Action("Index", "Warehouse")" class="btn btn-success ms-2">Back</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}