@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Base Styles */
    body {
        background: linear-gradient(135deg, #0f0c29, #302b63, #24243e); /* Deep, rich purplish-blue gradient */
        min-height: 100vh; /* Ensure it takes at least full viewport height */
        font-family: 'Montserrat', sans-serif; /* Modern, clean font */
        margin: 0;
        padding: 2rem; /* Slightly reduced padding */
        display: flex;
        align-items: center;
        justify-content: center;
        overflow-x: hidden; /* Prevent horizontal scroll */
        overflow-y: auto; /* Allow vertical scroll if content overflows */
    }

    .container {
        max-width: 1300px;
        margin: 0 auto;
        text-align: center;
        position: relative;
        z-index: 2; /* Ensure content is above background elements */
        padding: 1rem; /* Add some internal padding for container */
    }

    h1 {
        color: #e0f2f7; /* Light cyan for contrast */
        font-size: 4rem; /* Slightly reduced for better fit */
        font-weight: 900;
        margin-bottom: 0.8rem;
        text-shadow: 0 8px 30px rgba(0, 0, 0, 0.5); /* Stronger shadow */
        letter-spacing: 0.07em; /* Slightly reduced letter spacing */
        text-transform: uppercase; /* All caps for prominence */
    }

    .subtitle {
        color: rgba(224, 242, 247, 0.9); /* Slightly darker cyan */
        font-size: 1.5rem; /* Slightly reduced */
        margin-bottom: 4rem; /* Adjusted margin */
        text-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
        font-weight: 300; /* Lighter font weight for subtitle */
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); /* Adjusted min-width for flexibility */
        gap: 2.5rem; /* Adjusted gap */
        margin-bottom: 2.5rem;
    }

    .card {
        background: rgba(255, 255, 255, 0.08); /* More transparent, subtle white */
        backdrop-filter: blur(40px) saturate(180%); /* Stronger blur and saturation */
        border-radius: 25px; /* Adjusted border-radius */
        padding: 2.5rem; /* Adjusted padding */
        border: 1px solid rgba(255, 255, 255, 0.15); /* Thinner, lighter border */
        transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94), box-shadow 0.5s ease; /* Smoother, bouncier transition */
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3); /* Deeper shadow */
        position: relative;
        overflow: hidden;
        perspective: 1000px; /* For 3D effect */
    }

        .card::before {
            content: '';
            position: absolute;
            top: -70%;
            left: -70%;
            width: 250%;
            height: 250%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0) 60%);
            transform: rotate(60deg);
            opacity: 0;
            transition: opacity 0.5s ease, transform 0.5s ease;
            z-index: -1;
        }

        .card:hover::before {
            opacity: 1;
            transform: rotate(45deg);
        }

        .card:hover {
            transform: translateY(-12px) rotateX(3deg) scale(1.02); /* Slightly less aggressive hover */
            box-shadow: 0 20px 70px rgba(0, 0, 0, 0.4);
        }

        .card h2 {
            color: #b3e0ff; /* Lighter blue for card titles */
            font-size: 1.7rem; /* Slightly reduced */
            margin-bottom: 2rem; /* Adjusted margin */
            display: flex;
            align-items: center;
            gap: 0.8rem; /* Adjusted gap */
            font-weight: 800;
            text-shadow: 0 3px 12px rgba(0, 0, 0, 0.15);
        }

    .icon {
        background: linear-gradient(45deg, #ff6b6b, #ffa07a); /* Fiery red-orange gradient */
        width: 32px; /* Slightly smaller icon */
        height: 32px; /* Slightly smaller icon */
        border-radius: 8px;
        font-size: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        box-shadow: 0 5px 18px rgba(255, 107, 107, 0.4);
        flex-shrink: 0;
    }

    .btn-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* Adjusted min-width for buttons */
        gap: 1.2rem; /* Adjusted gap */
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.6rem;
        padding: 1.2rem 1rem; /* Adjusted padding */
        color: white;
        text-decoration: none;
        border-radius: 15px; /* Adjusted border-radius */
        font-weight: 600; /* Slightly lighter font weight */
        transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
        z-index: 1;
        text-shadow: 0 1px 4px rgba(0,0,0,0.2);
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.12); /* Slightly less opaque */
            z-index: -1;
            transform: skewX(-15deg); /* Slightly less skew */
            transition: left 0.4s ease-out;
        }

        .btn:hover::before {
            left: 0;
        }

        .btn:hover {
            transform: translateY(-6px) scale(1.03); /* Slightly less aggressive lift and scale */
            text-decoration: none;
            color: white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

    .btn-primary {
        background: linear-gradient(135deg, #1abc9c, #16a085); /* Teal-green gradient */
        box-shadow: 0 5px 20px rgba(26, 188, 156, 0.4);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #16a085, #1abc9c); /* Reverse gradient on hover */
        }

    .btn-secondary {
        background: linear-gradient(135deg, #9b59b6, #8e44ad); /* Amethyst purple gradient */
        box-shadow: 0 5px 20px rgba(155, 89, 182, 0.4);
    }

        .btn-secondary:hover {
            background: linear-gradient(135deg, #8e44ad, #9b59b6); /* Reverse gradient on hover */
        }

    /* Floating elements for background */
    .float-shape {
        position: absolute;
        background: rgba(255, 255, 255, 0.03);
        filter: blur(12px); /* Slightly less blur */
        opacity: 0.7; /* Slightly less opaque */
        animation: float 25s infinite ease-in-out alternate;
        pointer-events: none; /* Ensure they don't block interaction */
        z-index: 1; /* Keep them behind content */
    }

    .shape-1 {
        width: 220px; /* Adjusted size */
        height: 220px;
        border-radius: 50%;
        top: 5%;
        left: 5%;
        animation-duration: 30s;
    }

    .shape-2 {
        width: 160px; /* Adjusted size */
        height: 160px;
        border-radius: 40% 60% 70% 30% / 60% 40% 40% 60%;
        bottom: 8%; /* Adjusted position */
        right: 8%; /* Adjusted position */
        animation-duration: 28s;
        animation-delay: 2s;
    }

    .shape-3 {
        width: 280px; /* Adjusted size */
        height: 280px;
        border-radius: 50%;
        top: -8%; /* Adjusted position */
        right: 10%; /* Adjusted position */
        animation-duration: 35s;
        animation-delay: 4s;
    }

    .shape-4 {
        width: 100px; /* Adjusted size */
        height: 100px;
        border-radius: 30% 70% 50% 50% / 50% 50% 70% 30%;
        bottom: 5%; /* Adjusted position */
        left: 15%; /* Adjusted position */
        animation-duration: 20s;
        animation-delay: 1s;
    }

    /* Keyframes for floating animation */
    @@keyframes float {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }

        50% {
            transform: translate(20px, 40px) rotate(10deg); /* Reduced movement */
        }

        100% {
            transform: translate(-10px, -20px) rotate(0deg);
        }
    }

    /* Media Queries for Responsiveness */
    @@media (max-width: 1024px) {
        h1 {
            font-size: 3.5rem;
        }

        .subtitle {
            font-size: 1.3rem;
        }

        .grid {
            gap: 2rem;
        }

        .card {
            padding: 2rem;
        }

            .card h2 {
                font-size: 1.5rem;
            }

        .btn-grid {
            gap: 1rem;
        }

        .btn {
            padding: 1rem 0.8rem;
        }
    }

    @@media (max-width: 768px) {
        body {
            padding: 1.5rem;
        }

        h1 {
            font-size: 3rem;
            letter-spacing: 0.05em;
        }

        .subtitle {
            font-size: 1.2rem;
            margin-bottom: 3rem;
        }

        .grid {
            grid-template-columns: 1fr; /* Stack cards vertically */
            gap: 1.5rem;
        }

        .card {
            padding: 1.8rem;
            border-radius: 20px;
        }

            .card h2 {
                font-size: 1.4rem;
                margin-bottom: 1.5rem;
            }

        .icon {
            width: 28px;
            height: 28px;
            font-size: 16px;
        }

        .btn-grid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); /* Allow buttons to wrap */
            gap: 0.8rem;
        }

        .btn {
            padding: 0.9rem 0.7rem;
            font-size: 0.9em;
            border-radius: 12px;
        }
        /* Hide some floating shapes on smaller screens to reduce clutter */
        .shape-3, .shape-4 {
            display: none;
        }
    }

    @@media (max-width: 480px) {
        body {
            padding: 1rem;
        }

        h1 {
            font-size: 2.2rem;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            font-size: 1rem;
            margin-bottom: 2rem;
        }

        .card {
            padding: 1.5rem;
        }

            .card h2 {
                font-size: 1.2rem;
                gap: 0.5rem;
            }

        .icon {
            width: 24px;
            height: 24px;
            font-size: 14px;
        }

        .btn-grid {
            grid-template-columns: 1fr; /* Stack buttons vertically on very small screens */
            gap: 0.6rem;
        }

        .btn {
            padding: 0.8rem;
            font-size: 0.85em;
        }

        .float-shape { /* Hide all floating shapes on very small screens */
            display: none;
        }
    }
</style>

<div class="float-shape shape-1"></div>
