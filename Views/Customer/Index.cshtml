@model IEnumerable<Inventory_Management_System.Models.Customer>
@{
    ViewData["Title"] = "Customers List";
}

<h2 class="mb-3">Customers</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped mb-3">
        <thead>
            <tr>
                <th style="min-width: 120px;">Name</th>
                <th style="min-width: 100px;">Phone</th>
                <th style="min-width: 80px;">Fax</th>
                <th style="min-width: 100px;">Mobile</th>
                <th style="min-width: 150px;">Email</th>
                <th style="min-width: 120px;">Website</th>
                <th style="min-width: 100px;">Created At</th>
                <th style="min-width: 100px;">Updated At</th>
                <th style="min-width: 80px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Fax</td>
                    <td>@customer.Mobile</td>
                    <td>@customer.Email</td>
                    <td>@customer.Website</td>
                    <td>@customer.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@(customer.UpdatedAt.HasValue ? customer.UpdatedAt.Value.ToString("yyyy-MM-dd") : "-")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a class="btn btn-success" href="@Url.Action("Add", "Customer")">Add New Customer</a>
    <a class="btn btn-success ms-2" href="@Url.Action("Index", "Home")">Back</a>
</div>
