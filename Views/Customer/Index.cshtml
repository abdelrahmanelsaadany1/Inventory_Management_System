@model IEnumerable<Inventory_Management_System.Models.Customer>
@{
    ViewData["Title"] = "Customers List";
}

<style>
    .customers-table {
        width: 100%;
        font-size: 14px;
     
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

        .customers-table th {
            padding: 12px 8px;
            border: none;
            text-align: center;
            white-space: nowrap;
        }

        .customers-table td {
            padding: 12px 8px;
            border: none;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
            word-wrap: break-word;
            max-width: 150px;
        }

       

        .customers-table tbody tr:last-child td {
            border-bottom: none;
        }

</style>

<h2 class="mb-3">Customers</h2>
<div class="table-responsive">
    <table class="table table-bordered table-striped mb-3 customers-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
           
                <th>Mobile</th>
                <th>Email</th>
                <th>Website</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Phone</td>
                    
                    <td>@customer.Mobile</td>
                    <td>@customer.Email</td>
                    <td>@customer.Website</td>
                    <td>@customer.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@(customer.UpdatedAt.HasValue ? customer.UpdatedAt.Value.ToString("yyyy-MM-dd") : "-")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="mt-3">
    <a class="btn btn-success" href="@Url.Action("Add", "Customer")">Add New Customer</a>
    <a class="btn btn-success ms-2" href="@Url.Action("Index", "Home")">Back</a>
</div>