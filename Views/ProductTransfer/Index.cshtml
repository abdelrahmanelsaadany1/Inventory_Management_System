@model IEnumerable<Inventory_Management_System.Models.ProductTransfer>

@{
    ViewData["Title"] = "Product Transfers List";
}

<h1>Product Transfers List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Transfer</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TransferNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TransferDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SourceWarehouse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DestinationWarehouse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th></th> @* For Action Links (Details, Edit, Delete - though Edit/Delete might be complex for transfers) *@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransferNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransferDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SourceWarehouse.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DestinationWarehouse.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        @* Edit/Delete might be complex for transfers involving inventory movements,
                           so typically you'd only allow viewing details or reversing the transfer.
                           <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                           <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-4" role="alert">
        No product transfers recorded yet.
    </div>
}

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>