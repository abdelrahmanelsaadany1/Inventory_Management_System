@model Inventory_Management_System.Models.Product

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-3">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Add New Product
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SaveAdd" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Code" class="form-label fw-bold required"></label> @* Label uses DisplayName from model *@
                            <input asp-for="Code" class="form-control form-control-lg" placeholder="e.g., P-001" required />
                            <div class="invalid-feedback">Please enter a product code.</div>
                            <span asp-validation-for="Code" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold required"></label> @* Label uses DisplayName from model *@
                            <input asp-for="Name" class="form-control" placeholder="e.g., Laptop" required />
                            <div class="invalid-feedback">Please enter a product name.</div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpiryPeriodInDays" class="form-label fw-bold"></label> @* Label uses DisplayName from model *@
                            <input asp-for="ExpiryPeriodInDays" type="number" class="form-control" placeholder="e.g., 365" />
                            <span asp-validation-for="ExpiryPeriodInDays" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-2"></i>Create Product
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Example of simple client-side validation using Bootstrap's needs-validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}